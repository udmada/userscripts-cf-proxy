amends "package://github.com/jdx/hk/releases/download/v1.28.0/hk@1.28.0#/Config.pkl"

hooks {
    ["pre-commit"] {
        fix = true
        stash = "git"
        steps {
            ["cargo-fmt"] {
                glob = List("**/*.rs")
                check = "cargo fmt --check"
                fix = "cargo fmt"
            }
            ["cargo-test"] {
                check = "cargo test --lib"
                exclusive = true
            }
        }
    }
}
